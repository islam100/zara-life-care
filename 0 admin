<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-database.js"></script>

<script>
  // Your Firebase Config Here
  const firebaseConfig = {
    apiKey: "AIzaSyCFgRQxK_W2T9S5QWZnxAd-kYV52Kzyb94",
    authDomain: "zara-life-care.firebaseapp.com",
    projectId: "zara-life-care",
    storageBucket: "zara-life-care.appspot.com",
    messagingSenderId: "307306937129",
    appId: "1:307306937129:web:a949207fe64fe87dd3d538"
  };

  firebase.initializeApp(firebaseConfig);
  const auth = firebase.auth();
  const db = firebase.database();

  // Check if logged in and is admin
  auth.onAuthStateChanged(user => {
    if (!user) {
      alert("Please login as admin.");
      window.location.href = "login.html";  // Your login page
      return;
    }
    // Check admin
    db.ref('admins/' + user.uid).get().then(snapshot => {
      if (!snapshot.exists()) {
        alert("You are not an admin.");
        auth.signOut();
        window.location.href = "login.html";
      } else {
        loadDrivers();
        loadBookings();
      }
    });
  });

  // Load Drivers and show approval & wallet recharge UI
  function loadDrivers() {
    db.ref('drivers').on('value', snapshot => {
      const drivers = snapshot.val() || {};
      const tbody = document.querySelector('#driversTable tbody');
      tbody.innerHTML = '';
      Object.entries(drivers).forEach(([driverId, driver]) => {
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td>${driver.driverName || '-'}</td>
          <td>${driver.ambulanceNumber || '-'}</td>
          <td>${driver.ambulanceCategory || '-'}</td>
          <td><a href="https://wa.me/${driver.whatsappNumber}" target="_blank">${driver.whatsappNumber || '-'}</a></td>
          <td>₹${driver.wallet || 0}</td>
          <td>
            <button class="approve" onclick="approveDriver('${driverId}')">Approve</button>
            <button class="reject" onclick="rejectDriver('${driverId}')">Reject</button>
          </td>
          <td>
            <input type="number" min="1" placeholder="Amount" class="recharge-amount" id="recharge-${driverId}" />
            <button class="recharge" onclick="rechargeWallet('${driverId}')">Recharge</button>
          </td>
        `;
        tbody.appendChild(tr);
      });
    });
  }

  // Approve driver
  function approveDriver(driverId) {
    db.ref('drivers/' + driverId).update({ isApproved: true })
      .then(() => alert('Driver approved'))
      .catch(e => alert('Error: ' + e.message));
  }

  // Reject driver
  function rejectDriver(driverId) {
    db.ref('drivers/' + driverId).update({ isApproved: false })
      .then(() => alert('Driver rejected'))
      .catch(e => alert('Error: ' + e.message));
  }

  // Recharge wallet
  function rechargeWallet(driverId) {
    const amountInput = document.getElementById('recharge-' + driverId);
    const amount = Number(amountInput.value);
    if (!amount || amount <= 0) {
      alert('Please enter valid recharge amount');
      return;
    }
    const driverRef = db.ref('drivers/' + driverId);
    driverRef.get().then(snapshot => {
      if (!snapshot.exists()) return alert('Driver not found');
      const currentWallet = snapshot.val().wallet || 0;
      const newWallet = currentWallet + amount;

      // Update wallet
      driverRef.update({ wallet: newWallet }).then(() => {
        // Log transaction
        const txnRef = db.ref('walletTransactions/' + driverId).push();
        txnRef.set({
          type: 'recharge',
          amount: amount,
          description: 'Wallet recharge by admin',
          date: Date.now()
        });
        alert('Wallet recharged successfully');
        amountInput.value = '';
      });
    });
  }

  // Load Bookings for admin to accept/reject
  function loadBookings() {
    db.ref('bookings').on('value', snapshot => {
      const bookings = snapshot.val() || {};
      const tbody = document.querySelector('#bookingsTable tbody');
      tbody.innerHTML = '';
      Object.entries(bookings).forEach(([bookingId, booking]) => {
        const tr = document.createElement('tr');

        let driverInfo = '-';
        if (booking.driverName) {
          driverInfo = `${booking.driverName} (<a href="https://wa.me/${booking.driverWhatsapp}" target="_blank">${booking.driverWhatsapp}</a>)`;
        }

        let actions = '';
        if (booking.status === 'pending') {
          actions = `
            <button onclick="assignDriver('${bookingId}')">Assign Driver</button>
            <button onclick="rejectBooking('${bookingId}')">Reject</button>
          `;
        } else {
          actions = 'N/A';
        }

        tr.innerHTML = `
          <td>${booking.patientName}</td>
          <td>${booking.ambulanceCategory}</td>
          <td>${booking.status}</td>
          <td>${driverInfo}</td>
          <td>${actions}</td>
        `;
        tbody.appendChild(tr);
      });
    });
  }

  // Assign driver to booking (simple prompt to choose driver from approved list)
  function assignDriver(bookingId) {
    db.ref('drivers').orderByChild('isApproved').equalTo(true).get().then(snapshot => {
      const drivers = snapshot.val();
      if (!drivers) return alert('No approved drivers found');

      let driverOptions = '';
      Object.entries(drivers).forEach(([driverId, driver]) => {
        driverOptions += `${driverId}: ${driver.driverName} (${driver.ambulanceCategory})\n`;
      });

      const chosenId = prompt(`Choose driverId to assign:\n${driverOptions}`);
      if (!chosenId || !drivers[chosenId]) {
        alert('Invalid driver ID');
        return;
      }

      // Deduct 100 from driver wallet on assignment
      const driverWallet = drivers[chosenId].wallet || 0;
      if (driverWallet < 100) {
        alert('Driver wallet balance is insufficient for booking');
        return;
      }

      // Update booking
      const bookingRef = db.ref('bookings/' + bookingId);
      bookingRef.update({
        status: 'accepted',
        driverId: chosenId,
        driverName: drivers[chosenId].driverName,
        driverWhatsapp: drivers[chosenId].whatsappNumber,
        confirmedBy: 'admin'
      }).then(() => {
        // Deduct wallet
        const driverRef = db.ref('drivers/' + chosenId);
        driverRef.update({ wallet: driverWallet - 100 });

        // Add transaction log
        const txnRef = db.ref('walletTransactions/' + chosenId).push();
        txnRef.set({
          type: 'deduction',
          amount: 100,
          description: `Booking assigned - ${bookingId}`,
          date: Date.now()
        });

        alert('Driver assigned and wallet deducted ₹100');
      });
    });
  }

  // Reject booking and refund wallet if needed
  function rejectBooking(bookingId) {
    const bookingRef = db.ref('bookings/' + bookingId);
    bookingRef.get().then(snapshot => {
      if (!snapshot.exists()) return alert('Booking not found');
      const booking = snapshot.val();
      if (booking.status !== 'pending' && booking.driverId) {
        // refund wallet to driver
        const driverId = booking.driverId;
        db.ref('drivers/' + driverId).get().then(driverSnap => {
          if (!driverSnap.exists()) return;
          const driver = driverSnap.val();
          const newWallet = (driver.wallet || 0) + 100;
          db.ref('drivers/' + driverId).update({ wallet: newWallet });

          const txnRef = db.ref('walletTransactions/' + driverId).push();
          txnRef.set({
            type: 'recharge',
            amount: 100,
            description: `Booking rejected refund - ${bookingId}`,
            date: Date.now()
          });
        });
      }
      // Update booking status to rejected
      bookingRef.update({ status: 'rejected' }).then(() => {
        alert('Booking rejected');
      });
    });
  }
</script>

</body>
